# Pine Time Experience Baguio - Environment Configuration Example
# Copy this file to .env and update the values with your actual configuration

# Database Configuration
# Options: "sqlite" or "postgresql"
DATABASE_TYPE=sqlite

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
SQLITE_DATABASE_URI=sqlite:///./pine_time.db

# PostgreSQL Configuration (used when DATABASE_TYPE=postgresql)
# Replace these values with your Neon PostgreSQL credentials
POSTGRES_SERVER=your-neon-hostname.neon.tech
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password
POSTGRES_DB=pine_time
POSTGRES_PORT=5432

# Connection Pool Settings
# These are reasonable defaults, adjust as needed
POOL_SIZE=5
MAX_OVERFLOW=10
POOL_TIMEOUT=30
POOL_RECYCLE=1800  # 30 minutes

# API Configuration
# Secret key for JWT token generation
SECRET_KEY=your-secret-key-at-least-32-characters-long

# Admin user credentials
FIRST_SUPERUSER=admin@pinetimeexperience.com
FIRST_SUPERUSER_PASSWORD=admin

# Registration settings
USERS_OPEN_REGISTRATION=False
